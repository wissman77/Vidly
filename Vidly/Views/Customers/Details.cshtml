
@model Vidly.Models.Customer
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul class="list-group">
    <li>MembershipType: @Model.MembershipType.Name</li>
    @if (Model.BirthDate.HasValue)
    {
        <li>BirtDate: @Model.BirthDate.Value.ToShortDateString()</li>
    }
</ul>

